{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2022",
    "moduleDetection": "force",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "module": "NodeNext",
    "isolatedModules": true,
    "noImplicitAny": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "examples"]
}
